    "code": {
      "type": "string",
      "description": "Код подтверждения из SMS (4 цифры)",
      "example": "1234",
      "minLength": 4,
      "maxLength": 4,
      "pattern": "[0-9]{4}"
    }
  },
  "required": ["phone", "code"],
  "x-readme-ref-name": "VerifyCodeDto"
}
